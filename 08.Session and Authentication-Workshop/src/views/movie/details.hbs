<section id="details-page">
  <div class="main_card">
    <div class="card_left">
      <div class="card_datails">
        <h1>{{movie.title}}</h1>
        <div class="card-movie">
          <div class="first-info">
            <p class="card-genre">Genre: {{movie.genre}}</p>
            <p class="card-director">Directror: {{movie.director}}</p>
          </div>
          <div class="second-info">
            <p class="card-year">Year: {{movie.year}}</p>
            <p class="card-ranking">

              {{!-- Rating:
              <span id="stars"> {{showRating rating}} </span> --}}

              Rating:
              <span id="stars">
                {{#each movie.stars}}
                  &#x2605;
                {{/each}}
              </span>
            </p>
          </div>
        </div>

        <p class="disc">
          Description:
          {{movie.description}}
        </p>
        <p class="card-category">Category: {{movie.category}}</p>

      </div>

      <div class="details-btn">
        <div id="attach-button">
          <a href="/movies/{{movie._id}}/attach-cast" >Attach
            Cast</a>
        </div>
        <button id="edit-button">Edit</button>
        <button id="delete-button">Delete</button>
      </div>
    </div>
    <div class="card_right">
      <img src="{{movie.imageURL}}" alt="{{movie.alt}}" />
    </div>
  </div>

  <div class="main-cast-card">
    {{#each movie.casts}}
      <div class="cast-card">
        <div class="card-img">
          <img src="{{imageURL}}" alt="{{name}}" />
        </div>
        <div class="cast-info">
          <h1>{{name}}</h1>
          <h3>Birth Year: {{birthYear}}</h3>
          <h3>Birthplace: {{birthplace}}</h3>
          <h3>Name in Movie: Ariel</h3>
        </div>
      </div>
    {{/each}}

  </div>
</section>